<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-8">
      <div class="well bs-component">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal", method: :put}) do |f| %>

          <fieldset>
            <%= devise_error_messages! %>
            <legend>編集</legend>

            <div class="form-group">
              <%= f.label :username,"名前", class: "col-lg-3 control-label" %>
              <div class="col-lg-8">
                <%= f.text_field :username, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :email,"Eメール", class: "col-lg-3 control-label" %>
              <div class="col-lg-8">
                <%= f.email_field :email, class: "form-control" %>
              </div>
            </div>

          <% if f.object.encrypted_password.present? %>
            <div class="form-group">
              <%= f.label :current_password,"現在のパスワード", class: "col-lg-3 control-label" %>
              <div class="col-lg-8">
                <%= f.password_field :current_password, class: "form-control" %>
              </div>
            </div>
        <% end %>

            <div class="form-group">
              <%= f.label :password,"新しいパスワード", class: "col-lg-3 control-label" %>
              <div class="col-lg-8">
                <%= f.password_field :password, class: "form-control" %>
              </div>
            </div>

              <div class="form-group">
                <%= f.label :password_confirmation,"パスワード確認", class: "col-lg-3 control-label" %>
                <div class="col-lg-8">
                  <%= f.password_field :password_confirmation, class: "form-control" %>
                </div>
              </div>

            <div class="form-group">
              <div class="col-lg-8 col-lg-offset-3">
                <%= f.submit "Edit", class: "btn btn-primary" %>
              </div>
            </div>

          </fieldset>

          <% end %>
      </div>
    </div>
  </div>
</div>

<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-8">
      <div class="bs-component">
        <div class="well">
          <h3>アカウントを取り消す</h3>
          <p><%= button_to "アカウントを取り消す", registration_path(resource_name), class: "btn btn-danger",
           data: { confirm: "アカウントを削除してもよろしいですか？" }, method: :delete %> </p>
          <p> <%= link_to "戻る", :back %> </p>
        </div>
      </div>
    </div>
  </div>
</div>
