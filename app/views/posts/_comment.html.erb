<div class="bs-docs-section">
  <div class="row">
    <div class="page-header">
    <div class="col-lg-12">
      <h2>Comments</h2>
    </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8">
      <div class="bs-component">
        <div class="list-group">
          <% @comments.each do |comment| %>
          <div class="list-group-item">
            <h4 class="list-group-item-heading"><%= comment.username %></h4>
            <p class="list-group-item-text"><%= comment.content %></p>
          </div>
          <% end %>
        </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8">
      <div class="well bs-component">
        <%= form_for([@post, @post.comments.build], html: {class: "form-horizontal"}) do |f| %>
        <fieldset>
          <div class="form-group">
            <div class="col-lg-2">
              <p>
              <%= f.label :content, "コメント", class: "control-label" %>
              </p>
              <%= f.submit "Comment", class: "btn btn-primary", style: "margin-top: 5px"  %>
            </div>
            <div class="col-lg-10">
              <%= f.text_area :content, class: "form-control", style: "margin-top: 0px; margin-bottom: 0px; height: 100px;" %>
            </div>
          </div>
        </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>
