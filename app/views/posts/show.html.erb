<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1><%= @post.title %> by <%= @post.user.username %></h1>
          <p class="text-success"><%= @post.deadline_at.strftime("%Y年 %m月 %d日") %>締め切り</p>
          <p class="bs-componet">
            <% @favorites.each do |favorite| %>
            <%= link_to favorite.user.username, user_path(favorite.user.id), class: "label label-info" %>
            <% end %>
          </p>
      </div>
      <div class="bs-component">
        <h2>
          <%= simple_format @post.body %>
        </h2>
      </div>
    </div>
  </div>
</div>


<%= render 'comment' %>
<%= render 'operation' %>
